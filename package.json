{
  "name": "task-manager-api",
  "version": "1.0.1",
  "description": "REST API to manage personal tasks.",
  "main": "build/main.js",
  "author": "Fenando López Martínez",
  "license": "MIT",
  "scripts": {
    "build": "tsc",
    "commit": "git-cz",
    "develop": "env-cmd -f ./config/dev.env ts-node-dev --respawn --no-notify --transpileOnly src/main.ts",
    "develop:inspect": "env-cmd ./config/dev.env ts-node-dev --inspect-brk --respawn --no-notify --transpileOnly src/main.ts",
    "lint": "eslint . --ext .js,.ts",
    "prebuild": "rm -rf ./build",
    "semantic-release": "semantic-release",
    "start": "node build/main.js",
    "test": "env-cmd -f ./config/test.env jest --passWithNoTests --runInBand",
    "test:watch": "env-cmd -f ./config/test.env jest --passWithNoTests  --runInBand --watch",
    "test:coverage": "jest --runInBand --coverage"
  },
  "dependencies": {
    "@sendgrid/mail": "7.2.1",
    "bcryptjs": "2.4.3",
    "express": "4.17.1",
    "jsonwebtoken": "8.5.1",
    "mongodb": "3.5.9",
    "mongoose": "5.9.21",
    "multer": "1.4.2",
    "sharp": "0.25.4",
    "validator": "13.1.1"
  },
  "devDependencies": {
    "@commitlint/cli": "8.3.5",
    "@commitlint/config-conventional": "8.3.4",
    "@semantic-release/changelog": "5.0.1",
    "@semantic-release/git": "9.0.0",
    "@types/bcryptjs": "2.4.2",
    "@types/express": "4.17.6",
    "@types/jest": "25.2.3",
    "@types/jsonwebtoken": "8.5.0",
    "@types/mongodb": "3.5.25",
    "@types/mongoose": "5.7.29",
    "@types/multer": "1.4.3",
    "@types/node": "14.0.5",
    "@types/sharp": "0.25.0",
    "@types/supertest": "2.0.10",
    "@types/validator": "13.1.0",
    "@typescript-eslint/eslint-plugin": "3.0.0",
    "@typescript-eslint/parser": "3.0.0",
    "commitizen": "4.1.2",
    "cz-conventional-changelog": "3.2.0",
    "env-cmd": "10.1.0",
    "eslint": "7.1.0",
    "eslint-config-prettier": "6.11.0",
    "eslint-plugin-prettier": "3.1.3",
    "husky": "4.2.5",
    "jest": "26.0.1",
    "lint-staged": "10.2.6",
    "prettier": "2.0.5",
    "semantic-release": "17.0.8",
    "supertest": "4.0.2",
    "ts-jest": "26.0.0",
    "ts-node-dev": "1.0.0-pre.44",
    "typescript": "3.9.3"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.{js,ts}": [
      "eslint"
    ]
  }
}
